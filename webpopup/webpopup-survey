<style>
    .CT_Interstitial {
        background-color: #fffeeb;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
        font-family: Arial, sans-serif;
        position: relative;
    }
    .close-btn {
      position: absolute;
      top: -10px;
      right: -10px;
      background: #ffffff;
      border: 2px solid #333;
      border-radius: 50%;
      font-size: 24px;
      cursor: pointer;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #333;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }
  
    .close-btn:hover {    
      color: red;
      border-color: red;
  }
    .survey-container {
        max-width: 600px;
        width: 100%;
        text-align: center;
    }
    .question {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        color: #333;
    }
    .options {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }
    .option-btn {
        padding: 1rem;
        border: 2px solid #007bff;
        background-color: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }
    .option-btn:hover {
        background-color: #007bff;
        color: white;
    }
    .submitted {
        display: none;
        font-size: 1.2rem;
        color: #28a745;
        margin-top: 2rem;
    }
  </style>
  <div id="intentOpacityDiv"></div>
  <div id="intentPreview"></div>
  <div class="CT_Interstitial">
    <button class="close-btn">&times;</button>
    <div class="survey-container">
        <div class="question">How did you hear about us?</div>
        <div class="options">
            <button class="option-btn">Social Media</button>
            <button class="option-btn">Search Engine</button>
            <button class="option-btn">Word of Mouth</button>
            <button class="option-btn">Online Ad</button>
            <button class="option-btn">Blog Post</button>
            <button class="option-btn">Email Newsletter</button>
            <button class="option-btn">YouTube</button>
            <button class="option-btn">Podcast</button>
            <button class="option-btn">Conference/Event</button>
            <button class="option-btn">Print Media</button>
            <button class="option-btn">Other</button>
        </div>
        <div class="submitted">Thank you for your feedback!</div>
    </div>
  </div>
  <script>
 document.addEventListener('DOMContentLoaded', function() {
    
    const closeBtn = document.querySelector('.close-btn');
    const interstitial = document.querySelector('.CT_Interstitial');
    
    
    if (closeBtn) {
        closeBtn.addEventListener('click', function() {
            
            const intentOpacityDiv = document.getElementById('intentOpacityDiv');
            const intentPreview = document.getElementById('intentPreview');
            const popArea = document.getElementById('pop_area');
            const modalMask = document.querySelector('.modal-mask');
            
            
            if (interstitial) {
                interstitial.remove();
            }
            
            
            try {
                if (window.parent && window.parent.document) {
                    const parentIntentPreview = window.parent.document.getElementById('intentPreview');
                    const parentIntentOpacityDiv = window.parent.document.getElementById('intentOpacityDiv');
                    
                    if (parentIntentPreview) {
                        parentIntentPreview.style.display = 'none';
                    }
                    if (parentIntentOpacityDiv) {
                        parentIntentOpacityDiv.style.display = 'none';
                    }
                }
            } catch (e) {
                console.warn('Unable to access parent window elements:', e);
            }
            
            
            if (popArea) {
                popArea.remove();
            }
            if (modalMask) {
                modalMask.style.display = 'none';
            }
            
            
            if (window.location) {
                window.location.href = 'wzrk://thisleadstonowhere';
            }
        });
    }
    
    
    const optionButtons = document.querySelectorAll('.option-btn');
    const submittedMessage = document.querySelector('.submitted');
    
    optionButtons.forEach(button => {
        button.addEventListener('click', function() {
            const selection = this.textContent;
            console.log('User selected:', selection);
            
            
            if (submittedMessage) {
                submittedMessage.style.display = 'block';
            }
            
            
            optionButtons.forEach(btn => {
                btn.disabled = true;
                btn.style.opacity = '0.5';
            });
            
            
            this.style.backgroundColor = '#007bff';
            this.style.color = 'white';
            this.style.opacity = '1';
            
            
            const evtProps = {'Survey Answer': selection};
            try {
                if (window.parent && window.parent.clevertap && window.parent.clevertap.event) {
                    window.parent.clevertap.event.push('Survey Response', evtProps);
                }
            } catch (e) {
                console.warn('Unable to send event to clevertap:', e);
            }
        });
    });
});
  </script>